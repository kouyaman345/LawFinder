{
  "name": "lawfinder",
  "version": "1.0.0",
  "description": "法令検索・法改正支援システム",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "build:static": "node scripts/build-static-simple.js",
    "build:static:full": "node scripts/build-static-full.js",
    "build:static:llm": "node scripts/build-static-llm.js",
    "build:static:egov": "node scripts/build-static-egov-full.js",
    "build:static:egov:full": "node scripts/build-static-egov-full.js",
    "build:static:site": "node scripts/build-static-site.js",
    "parse:xml": "node scripts/parse-xml.js",
    "serve": "node scripts/serve.js",
    "dev:static": "npm run build && npm run build:static && npm run serve"
  },
  "keywords": [
    "law",
    "legal",
    "japan",
    "neo4j",
    "typescript"
  ],
  "author": "LawFinder Team",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "bottleneck": "^2.19.5",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^10.1.0",
    "neo4j-driver": "^5.15.0",
    "node-cache": "^5.1.2",
    "p-queue": "^7.4.1",
    "prisma": "^5.7.0",
    "redis": "^4.6.11",
    "uuid": "^11.1.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.4",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
